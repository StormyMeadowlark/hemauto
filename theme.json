{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color":{
            "defaultPalette": false,
            "palette": [
                { "slug": "hemauto-white", "color": "#FAFFFA", "name": "HEM Auto White" },
                { "slug": "hemauto-lightGray", "color": "#aab2aa", "name": "HEM Auto Light Gray"},
                { "slug": "hemauto-mediumGray", "color": "#5A645a", "name": "HEM Auto Medium Gray"},
                { "slug": "hemauto-darkGray", "color": "#374137", "name": "HEM Auto Dark Gray"},
                { "slug": "hemauto-gray", "color": "#333333", "name": "HEM Auto Gray"},
                { "slug": "hemauto-black", "color": "#0a0f0a", "name": "HEM Auto Black"},
                { "slug": "hemauto-green", "color": "#00FF00", "name": "HEM Auto Green"},
                { "slug": "hemauto-lightGreen", "color": "#0a8f0a", "name": "HEM Auto Light Green"},
                { "slug": "hemauto-mediumGreen", "color": "#0f570f", "name": "HEM Auto Medium Green"},
                { "slug": "hemauto-darkGreen", "color": "#141E14", "name": "HEM Auto Dark Green"},
                { "slug": "hemauto-success", "color": "#34d399", "name": "HEM Auto success"},
                { "slug": "hemauto-info", "color": "#60a5fa", "name": "HEM Auto Info"},
                { "slug": "hemauto-warning", "color": "#fb923c", "name": "HEM Auto Warning"},
                { "slug": "hemauto-Danger", "color": "#ec4899", "name": "HEM Auto Danger"},
                { "slug": "hemauto-greenSmoke", "color": "#c8e1c8", "name": "HEM Auto Green Smoke"},
                { "slug": "hemauto-transparent", "color": "#00000000", "name": "HEM Auto Transparent"}

            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "defaultGradients": false,
            "customGradient": false,
            "gradients": [
                {"slug": "hemauto-gradient-black-transparent", "name": "HEM Auto Black to Transparent Gradient", "gradient": "linear-gradient(#000000ff, #00000000)"}
            ]

        },
        "blocks": {
            "core/site-title": {
                "color":{
                    "defaultPalette": false,
                    "link": true,
                    "custom": true,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Tilt Warp, sans-serif",
                            "slug": "hemauto-title-tilt-warp",
                            "name": "HEM Auto Tilt Warp"
                        }
                    ]
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography":{
            "fontFamilies": [
                {
                    "fontFamily": "Play, sans-serif",
                    "slug": "hemauto-headings-play",
                    "name": "HEM Auto Play"
                },
                {
                    "fontFamily": "Urbanist, sans-serif",
                    "slug": "hemauto-body-urbanist",
                    "name": "HEM Auto Urbanist"
                },
                {
                    "fontFamily": "Road Rage, sans-serif",
                    "slug": "hemauto-aside-road-rage",
                    "name": "HEM Auto Road Rage"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small" },
                { "slug": "medium", "size": "1.25rem", "name": "Medium" },
                { "slug": "large", "size": "2.25rem", "name": "Large" },
                { "slug": "x-large", "size": "3rem", "name": "Extra Large" },
                { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px", "rem", "vh", "vw", "%"
            ],
            "blockGap": true
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--hemauto-dark-gray)",
            "background": "var(--wp--preset--color--hemauto-white)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--hemauto-green)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--hemauto-gradient-black-transparent)"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--hemauto-green)"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--hemauto-title-tilt-warp)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--hemauto-body-urbanist)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "bottom": "0px",
                "left": "0px",
                "right": "0px",
                "top": "0px"
            },
            "padding": {                
            "bottom": "0px",
            "left": "0px",
            "right": "0px",
            "top": "0px"
            },
            "blockGap": "4rem"
        }
    }
}